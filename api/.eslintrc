{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": ["prettier", "eslint:recommended", "eslint-config-leapfrog"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "arrow-parens": ["error", "as-needed"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": false,
          "ClassDeclaration": false,
          "ArrowFunctionExpression": true,
          "FunctionExpression": false
        }
      }
    ]
  }
}
